<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/maina"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.sch.smktelkom_mlg.project.xirpl105142332.dolanjatim.MainActivity"
    tools:showIn=""
    android:background="@color/colorbg">

    <ImageButton
            android:id="@+id/gambar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="center"
            android:src="@drawable/a" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvKota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:paddingLeft="6dp"
                android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:text="Kota"
            android:layout_weight="1" />

        <TextView
            android:text="MORE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView4"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:paddingRight="6dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <include
            layout="@layout/content_main_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView2"
    android:layout_width="match_parent"
        android:fontFamily="serif"
        android:text="Jawa Timur, provinsi dengan segala keindahan alamnya."
        android:textSize="20sp"
        android:background="@drawable/background"
        android:gravity="center"
        android:layout_height="140dp"
        android:textColor="@color/cardview_light_background" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvWisata1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:text="Surabaya"
            android:layout_weight="1" />

        <TextView
            android:text="MORE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView5"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:paddingRight="6dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <include
        layout="@layout/content_main_menu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--<LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">-->

    <!--</LinearLayout>-->


